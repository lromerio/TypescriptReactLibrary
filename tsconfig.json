{
    "compilerOptions": {
      "outDir": "lib",
      "target": "es5",
      "module": "commonjs",
      "sourceMap": false,
      "jsx": "react",
      "typeRoots": [
        "index.d.ts",
        "node_modules/@types"
      ],

      "declaration": true,
      //"removeComments": true,

      "moduleResolution": "node",
      "allowJs": false,
      "forceConsistentCasingInFileNames": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
    },
    "include": [
      "./src/**/*.tsx",
      "./src/**/*.ts"
    ],
    "exclude": [
      "**/*.spec.ts",
      "**/*.spec.tsx",
    ]
  }